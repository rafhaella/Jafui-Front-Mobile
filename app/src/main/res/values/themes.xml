<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Jafui" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Jafui" parent="Base.Theme.Jafui">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textAppearance">@font/alata</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:buttonTint">@color/primary</item>
    </style>

    <style name="Theme.Jafui.Fullscreen" parent="Theme.Jafui">
        <item name="android:actionBarStyle">@style/Widget.Theme.Jafui.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Jafui.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Jafui.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jafui.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Jafui.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>